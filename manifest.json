{
  "manifest_version": 3,
  "name": "Python Module Explorer",
  "version": "1.0",
  "description": "Interactive Python module explorer with virtual environment support",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Python Module Explorer"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}